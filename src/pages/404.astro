---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CustomButton from '../components/CustomButton.astro';
---

<BaseLayout 
  title="404 - Page Not Found | Elisha Coad"
  description="The page you're looking for doesn't exist. Return to the homepage to explore Elisha Coad's product design portfolio."
  noindex={true}
>
  <Header currentPage="index" />
  
  <div class="section">
    <div class="w-container">
      <div class="hero">
        <h1>404</h1>
        <p class="mt-5 mr-[58px] text-2xl font-light leading-[150%]">Oops! The page you're looking for doesn't exist.<br></p>
        <CustomButton href="/" text="Return to homepage" />
      </div>
    </div>
  </div>

  <Footer />
</BaseLayout>
