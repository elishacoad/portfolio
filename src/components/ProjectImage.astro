---
export interface Props {
  src: string;
  alt: string;
  caption?: string;
  grouped?: boolean;
}

const { src, alt, caption, grouped = false } = Astro.props;
---

<img src={src} loading="lazy" alt={alt} class={`border-solid border-[.5px] border-[var(--med-grey)] rounded min-w-full ${grouped ? 'mt-[10px]' : 'mt-[60px]'} shadow-[0_2px_5px_-2px_rgba(0,0,0,0.1)]`}>
{caption && <p class="text-center mt-[5px] text-sm">{caption}<br></p>}
