---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import NameValuePair from '../components/NameValuePair.astro';

export interface Props {
  title: string;
  description?: string;
  projectTitle: string;
  projectSubtitle: string;
  overview: string;
  timeline: string;
  role: string;
  tools: string;
  ogImage?: string;
}

const { 
  title, 
  description,
  projectTitle,
  projectSubtitle,
  overview,
  timeline,
  role,
  tools,
  ogImage
} = Astro.props;
---

<BaseLayout 
  title={title}
  description={description}
  ogImage={ogImage}
>
  <Header currentPage="work" />
  
  <div class="section">
    <div class="max-w-[720px] w-container project-container">
      <div class="mt-[25vh] mb-[140px]">
        <div class="flex flex-col items-center project-heading-image-div">
          <img src={projectTitle === 'Lore' ? '/images/projects/lore/Logo-Mark.png' : `/images/projects/${projectTitle.toLowerCase()}/${projectTitle}-Header.png`} loading="lazy" alt="" class="project-heading-image">
        </div>
        <div class="project-heading">
          <h2>{projectTitle}</h2>
          <h5 class="-mt-[5px]">{projectSubtitle}</h5>
        </div>
        <div class="border-solid border-[.5px] border-[var(--med-grey)] bg-[var(--light-grey)] rounded mt-6 px-6 py-2">
          <NameValuePair name="Overview" value={overview} noMargin={true} />
          <NameValuePair name="Timeline" value={timeline} />
          <NameValuePair name="Role" value={role} />
          <NameValuePair name="Tools Used" value={tools} />
        </div>
        
        <slot />
        
        <div class="flex justify-center mt-[120px] -mb-[60px]">
          <a href="/" class="button mouse-hover-fx w-button">Back to all work</a>
        </div>
      </div>
    </div>
  </div>

  <Footer />
</BaseLayout>
