---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import NameValuePair from '../components/NameValuePair.astro';
import CustomButton from '../components/CustomButton.astro';

export interface Props {
  title: string;
  description?: string;
  projectTitle: string;
  projectSubtitle: string;
  overview: string;
  timeline: string;
  role: string;
  tools: string;
}

const { 
  title, 
  description,
  projectTitle,
  projectSubtitle,
  overview,
  timeline,
  role,
  tools
} = Astro.props;
---

<BaseLayout 
  title={title}
  description={description}
>
  <Header currentPage="work" />
  
  <div class="section">
    <div class="project-container w-container">
      <div class="project-div">
        <div class="project-heading-image-div">
          <img src={projectTitle === 'Lore' ? '/images/projects/lore/Logo-Mark.png' : `/images/projects/${projectTitle.toLowerCase()}/${projectTitle}-Header.png`} loading="lazy" alt="" class="project-heading-image">
        </div>
        <div class="project-heading">
          <h2>{projectTitle}</h2>
          <h5 class="project-subtitle">{projectSubtitle}</h5>
        </div>
        <div class="text-section overview">
          <NameValuePair name="Overview" value={overview} noMargin={true} />
          <NameValuePair name="Timeline" value={timeline} />
          <NameValuePair name="Role" value={role} />
          <NameValuePair name="Tools Used" value={tools} />
        </div>
        
        <slot />
        
        <div class="bottom-section">
          <h2 class="text-title hide">Check out my other work</h2>
          <div class="project-blurb-div hide">
            <h2>Lore</h2>
            <p class="body-lg botmarginneg">Adventure in style with this D&D companion app.</p>
            <div class="btn-spacer">
              <CustomButton 
                href="#" 
                text="Case Study Coming Soon" 
                isDisabled={true}
              />
            </div>
          </div>
          <a href="/" class="button mouse-hover-fx w-button">Back to all work</a>
        </div>
      </div>
    </div>
  </div>

  <Footer />
</BaseLayout>
